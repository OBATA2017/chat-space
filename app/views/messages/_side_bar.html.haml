.side_bar
  .side_bar__header
    .side_bar__header__box
      %p.side_bar__header__box__user-name
        = current_user.name
      %ul.side_bar__header__box__menu
        %li.list
          = link_to new_group_path do
            = icon('fas', 'edit', class: "icon")
        %li.list
          -# = link_to edit_user_path(current_user.id) do
          = link_to edit_user_password_path do
            = icon('fas', 'cog', class: "icon")

  .side_bar__groups
    .side_bar__groups__box
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            %p.side_bar__groups__box__group-name
              = group.name
            %p.side_bar__groups__box__message
              = group.show_last_message

